{{> header}}
<div class="container-fluid">
    <!--Books displayed in Card view BEGIN-->

    <div class="row mx-auto">
       {{#books}}
      <div class="col-6 all_books_column">

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="/uploads/{{cover}}" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <a href=""><h5>{{name}}</h5></a>
                <p class="card-text">
                {{divide rate raters}}
                </p>
                 <p class="card-text">
                     <a href="/categories/{{category._id}}"></a>
                {{category.category}}
                </p>
                <a href="/books/{{_id}}"><h6>See More</h6></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
   {{/books}}



   


    </div>

   

    <div class="row ">
      <div class="col-4"></div>
      <div class="col-4">

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                {{#times pageCount}}
                {{#eq ../page  this}}
                <li class="page-item active"><a class="page-link" href="?p={{this}}">{{this}}</a></li>
                {{else}}
                <li class="page-item"><a class="page-link" href="?p={{this}}">{{this}}</a></li>
                {{/eq}}
                {{/times}}
              </ul>
        </nav>


      </div>
      <div class="col-4"></div>
    </div>
   
{{> footer}}
